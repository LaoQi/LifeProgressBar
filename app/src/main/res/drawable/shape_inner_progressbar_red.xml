        android:bottom=".5dp"
        android:left=".5dp"
        android:right=".5dp"
        android:top=".5dp">
        <clip>
            <shape>
                <corners android:radius="8dip"/>
<!--                <gradient-->
<!--                    android:angle="90"-->
<!--                    android:endColor="#FFA28B"-->
<!--                    android:startColor="#FF521E"/>-->
                <gradient
                    android:angle="90"
                    android:endColor="#FF5722"
                    android:startColor="#FF5722"/>
            </shape>
        </clip>
    </item>
</layer-list>