                <corners android:radius="8dip"/>
<!--                <gradient-->
<!--                    android:angle="90"-->
<!--                    android:endColor="#B6FF62"-->
<!--                    android:startColor="#3DE344"/>-->
                <gradient
                    android:angle="90"
                    android:endColor="#8BC34A"
                    android:startColor="#8BC34A"/>
            </shape>
        </clip>
    </item>
